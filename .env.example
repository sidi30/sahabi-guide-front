# Sahabi Guide Environment Configuration

# API Configuration
API_BASE_URL=https://api.sahabiguide.com
API_VERSION=v1
API_TIMEOUT=30000

# Google Maps API Key (required for map functionality)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Firebase Configuration (optional)
FIREBASE_PROJECT_ID=sahabi-guide
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_APP_ID=your_firebase_app_id

# Audio Configuration
AUDIO_BASE_URL=https://audio.sahabiguide.com
ENABLE_OFFLINE_AUDIO=true

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_LOCATION_SERVICES=true
ENABLE_AUDIO_PLAYBACK=true
ENABLE_QR_CODE_SHARING=true

# Debug Configuration
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_ANALYTICS=false

# Localization
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en,ha,dj

# App Configuration
APP_VERSION=1.0.0
MIN_SUPPORTED_VERSION=1.0.0
FORCE_UPDATE=false
